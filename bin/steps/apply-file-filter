#!/bin/bash

# Check if the correct number of arguments is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <repository_path>"
    exit 1
fi

# Assign argument to variable
repo_path="$1"

# Check if the FILTER_EXTENSION environment variable is set
if [ -z "$FILTER_EXTENSION" ]; then
    echo "Error: FILTER_EXTENSION environment variable is not set."
    echo "Please set it using: heroku config:set FILTER_EXTENSION=your_extension"
    exit 1
fi

# Remove any leading dot from the extension if present
extension="${FILTER_EXTENSION#.}"

# Find and delete files with the specified extension
find "$repo_path" -type f -name "*.$extension" -print -delete

echo "Deletion complete. All files with extension '.$extension' have been removed from $repo_path"
